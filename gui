-- UI Toggle Functionality
local isUIVisible = true
game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.Tab then
        isUIVisible = not isUIVisible
        MainPanel.Visible = isUIVisible
    end
end)

-- Variables for Coin Farming
local localPlayer = game.Players.LocalPlayer
local playerCharacter = localPlayer.Character or localPlayer.CharacterAdded:Wait()
local humanoidRootPart = playerCharacter:WaitForChild("HumanoidRootPart")
local isFarmingRunning = false
local totalCoinsCollected = 0

-- Update 'Running' State
spawn(function()
    while wait(0.1) do
        StatusLabel.Text = "Running: " .. tostring(isFarmingRunning)
    end
end)

-- Toggle Button Functionality
ToggleButtonUI.MouseButton1Click:Connect(function()
    isFarmingRunning = not isFarmingRunning
    print("Running state toggled to:", isFarmingRunning)
end)

-- Teleport to GunDrop Button Functionality
TeleportBtn.MouseButton1Click:Connect(function()
    local previousPosition = humanoidRootPart.CFrame -- Save the player's current position
    local closestGunDrop = nil
    local closestDistance = math.huge

    -- Find the nearest GunDrop
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name == "GunDrop" and obj:IsA("BasePart") then
            local dist = (obj.Position - humanoidRootPart.Position).Magnitude
            if dist < closestDistance then
                closestDistance = dist
                closestGunDrop = obj
            end
        end
    end

    if closestGunDrop then
        humanoidRootPart.CFrame = closestGunDrop.CFrame + Vector3.new(0, 3, 0) -- Teleport to the GunDrop
        task.wait(0.1) -- Shorter delay
        humanoidRootPart.CFrame = previousPosition -- Teleport back to the old position
    else
        print("GunDrop not found!")
    end
end)

-- Function to find all coins
local function findAllCoins()
    local coinsList = {}
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name == "Coin_Server" and obj:IsA("BasePart") then
            table.insert(coinsList, obj)
        end
    end
    return coinsList
end

-- Function to teleport to a coin
local function moveToCoin(coin)
    if not humanoidRootPart or not coin then return end
    humanoidRootPart.CFrame = coin.CFrame + Vector3.new(0, 3, 0)
end

-- Main Farming Loop
spawn(function()
    while wait(0.1) do
        if isFarmingRunning then
            local coins = findAllCoins()
            if #coins > 0 then
                moveToCoin(coins[math.random(1, #coins)])
                totalCoinsCollected = totalCoinsCollected + 1
            end
        end
    end
end)

-- KillAll Functionality
KillAllBtn.MouseButton1Click:Connect(function()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name == "Coin_Server" and obj:IsA("BasePart") then
            obj:Destroy() -- Destroy all coins
        end
    end
end)

-- Function to handle Sheriff and Murderer actions
-- Crash, Shoot Murderer
CrashSheriffBtn.MouseButton1Click:Connect(function()
    -- Custom crash logic for Sheriff
end)
CrashMurdererBtn.MouseButton1Click:Connect(function()
    -- Custom crash logic for Murderer
end)
ShootMurdererBtn.MouseButton1Click:Connect(function()
    -- Custom shoot logic for Murderer
end)
